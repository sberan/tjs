{
  "name": "json-schema-ts",
  "version": "0.0.1",
  "description": "JSON Schema validator with TypeScript type inference",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "npm run test:types && npm run test:runtime && npm run test:suite",
    "test:types": "eslint tests/types/",
    "test:runtime": "vitest run tests/runtime/",
    "test:suite": "vitest run tests/suite/compliance.test.ts",
    "test:suite:keyword": "vitest run tests/suite/keyword.test.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "bench": "tsx benchmarks/bench.ts",
    "bench:json": "tsx benchmarks/bench.ts --json",
    "bench:ebdrup": "node benchmarks/run-ebdrup-benchmark.cjs",
    "bench:ebdrup:quick": "node benchmarks/run-ebdrup-compliance.cjs"
  },
  "keywords": [
    "json-schema",
    "typescript",
    "validation",
    "type-inference"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.50.1",
    "ajv": "^8.17.1",
    "ajv-draft-04": "^1.0.0",
    "ajv-formats": "^3.0.1",
    "ajv-keywords": "^5.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-expect-type": "^0.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "type-fest": "^4.30.0"
  },
  "lint-staged": {
    "*.{ts,js,json}": "prettier --write"
  }
}
