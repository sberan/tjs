{
  "name": "tjs",
  "version": "7.0.0",
  "description": "The world's fastest and most accurate JSON Schema validator, with magical typescript inference",
  "author": "Sam Beran <sberan@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sberan/tjs.git"
  },
  "homepage": "https://github.com/sberan/tjs#readme",
  "bugs": {
    "url": "https://github.com/sberan/tjs/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "npm run test:types && npm run test:runtime",
    "test:types": "eslint tests/types/",
    "test:runtime": "vitest run tests/runtime/ tests/suite/compliance.test.ts",
    "test:suite:keyword": "vitest run tests/suite/keyword.test.ts",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "bench": "tsx benchmarks/bench.ts",
    "bench:ajv": "tsx benchmarks/bench.ts -v ajv --json benchmarks/results/ajv.json && tsx benchmarks/json-to-markdown.ts benchmarks/results/ajv.json > benchmarks/results/BENCHMARK_AJV.md",
    "bench:zod": "tsx benchmarks/bench.ts -v zod --json benchmarks/results/zod.json && tsx benchmarks/json-to-markdown.ts benchmarks/results/zod.json > benchmarks/results/BENCHMARK_ZOD.md",
    "bench:joi": "tsx benchmarks/bench.ts -v joi --json benchmarks/results/joi.json && tsx benchmarks/json-to-markdown.ts benchmarks/results/joi.json > benchmarks/results/BENCHMARK_JOI.md"
  },
  "keywords": [
    "json-schema",
    "typescript",
    "validation",
    "type-inference"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "ajv": "^8.17.1",
    "ajv-draft-04": "^1.0.0",
    "ajv-formats": "^3.0.1",
    "ajv-formats-draft2019": "^1.6.1",
    "ajv-keywords": "^5.1.0",
    "enjoi": "^9.0.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-expect-type": "^0.6.2",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "joi": "^17.13.3",
    "json-schema-to-zod": "^2.7.0",
    "lint-staged": "^16.2.7",
    "mitata": "^1.0.34",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "zod": "^4.3.4"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": "prettier --write"
  }
}
